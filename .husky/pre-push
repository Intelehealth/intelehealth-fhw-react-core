#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Lint check
echo "📝 Running lint check..."
yarn lint:check

# Type checking
echo "🔧 Running TypeScript type check..."
yarn type-check

# Run tests
echo "🧪 Running tests..."
yarn test

# Build verification
echo "🏗️ Verifying build..."
yarn build

echo "✅ All pre-push checks passed!"
